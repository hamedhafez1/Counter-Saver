<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnInCreaseCounter"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_button"
        android:contentDescription="Counter+"
        android:src="@drawable/ic_add_96"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/btnDeCreaseCounter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@id/btnInCreaseCounter"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:contentDescription="Counter-"
        android:src="@drawable/ic_remove_48"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@id/btnDeCreaseCounter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnSaveCounter"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/round_button"
            android:contentDescription="save"
            android:src="@drawable/ic_save_24" />
    </LinearLayout>
</RelativeLayout>